<?php

    public function setStatus ($status) {
        if ($status == "On shelf") {
            $this->status = $status;
        } else if ($status == "On loan") {
            $this->status = $status;
        } else if ($status == "No longer available") {
            $this->status = $status;
        } else { 
            die(" Fatal error: Invalid Status");
        }
        return $status;
    }
