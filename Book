<?php

//namespace Classes\Book;

class Book {
    public $title;
    public $author;
    public $publisher;
    public $datePublished;
    public $language;
    public $genre;
    public $loanLength;
    public $location;
    public $status;
    
    public function __construct($title,$author,$publisher,$datePublished,$language,$genre,$loanLength,$location,$status) {
        $this->title = $title;    
        $this->author = $author; 
        $this->publisher = $publisher; 
        $this->datePublished = $datePublished; 
        $this->language = $language; 
        $this->genre = $genre; 
        $this->loanLength = $loanLength;
        $this->location = $location;
        $this->status = $status;  
    }
  
    public function get_details() {
        $details = "Book details: <br>
                '$this->title' <br>
                Author: $this->author <br>
                Published by: $this->publisher, $this->datePublished <br>
                Language: $this->language <br>
                Genre: $this->genre <br>
                Status: $this->status <br>
                Location: $this->location";
        echo $details;
    }
    
    public function set_status ($newStatus) {
      $this->status = $newStatus;
    }
   
    public function get_status() {
        return $this->status;
    }
    
    public function get_location(){
        return $this->location;
    }
    
}

