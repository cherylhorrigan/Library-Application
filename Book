<?php

//namespace Classes\Book;

class Book {
    public $title;
    public $author;
    public $publisher;
    public $datePublished;
    public $language;
    public $genre;
    public $loanLength;
    public $location;
    public $status;
    
    public function __construct($title,$author,$publisher,$datePublished,$language,$genre,$location,$status) {
        $this->title = $title;    
        $this->author = $author; 
        $this->publisher = $publisher; 
        $this->datePublished = $datePublished; 
        $this->language = $language; 
        $this->genre = $genre; 
        $this->loanLength = 3;
        $this->location = $location;
        $this->status = $status;  
    }
  
    public function get_details() {
        $details = "Book details: <br>
                '$this->title' <br>
                Author: $this->author <br>
                Published by: $this->publisher, $this->datePublished <br>
                Language: $this->language <br>
                Genre: $this->genre <br>
                Status: $this->status <br>
                Location: $this->location";
        echo $details;
    }
    
    public function set_status ($newStatus) {
      $this->status = $newStatus;
    }
   
    public function get_status() {
        return $this->status;
    }
    
    public function get_location(){
        return $this->location;
    }
    
}

class Audiobook extends Book {
    public $artist;
    public $duration;
    public $format = "MP4";
    private $uploadDate;
    
    public function get_details() {
        $details = "Audiobook details: <br>
                '$this->title' <br>
                Format: $this->format <br>
                Author: $this->author <br>
                Published by: $this->publisher, $this->datePublished <br>
                Language: $this->language <br>
                Genre: $this->genre <br>
                Status: $this->status <br>
                Location: $this->location";
        echo $details;
    }

    public function set_uploadDate ($newUploadDate) {
      $this->uploadDate = $newUploadDate;
    }
    
    public function set_duration ($newDuration) {
      $this->duration = $newDuration;
    }
    
    public function set_artist ($newArtist) {
      $this->artist = $newArtist;
    }
    
    public function get_duration() {
        return $this->duration;
    }
    
    public function get_artist() {
        return $this->artist;
    }
    
    public function get_format() {
        return $this->format;
    }
    
    public function get_uploadDate(){
        return $this->uploadDate;
    }    
    
}

class Ebook extends Book {
    private $fileSize;
    public $format = "PDF";
    
    public function get_details() {
        $details = "Ebook details: <br>
                '$this->title' <br>
                Format: $this->format <br>
                Author: $this->author <br>
                Published by: $this->publisher, $this->datePublished <br>
                Language: $this->language <br>
                Genre: $this->genre <br>
                Status: $this->status <br>
                Location: $this->location";
        echo $details;
    }
    
    public function set_fileSize ($newfileSize) {
      $this->fileSize = $newfileSize;
    }
    
    private function get_fileSize(){
        return $this->fileSize;
    }
    
     public function get_format() {
        return $this->format;
    }
}

class Pamphlet extends Book {
    public $artist;
    public $format = "JPEG/JPG";
    
    public function get_details() {
        $details = "Pamphlet details: <br>
                '$this->title' <br>
                Format: $this->format <br>
                Published by: $this->publisher, $this->datePublished <br>
                Language: $this->language <br>
                Genre: $this->genre <br>
                Status: $this->status <br>
                Location: $this->location";
        echo $details;
    }
    
    public function set_artist ($newArtist) {
      $this->artist = $newArtist;
    }
    
    public function set_editor($newEditor) {
        $this->editor = $newEditor;
    }
    
    public function get_editor(){
        return $this->editor;
    }
    
    private function get_Artist(){
        return $this->artist;
    }
}
